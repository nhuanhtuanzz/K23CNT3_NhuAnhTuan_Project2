<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            min-height: 100vh;
            display: flex;
        }

        .sidebar {
            width: 250px;
            background: #343a40;
            color: white;
            display: flex;
            flex-direction: column;
            padding: 20px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                padding: 10px;
                border-radius: 5px;
                margin-bottom: 5px;
            }

                .sidebar a:hover {
                    background: #495057;
                }

        .content {
            flex: 1;
            padding: 20px;
            background: #f8f9fa;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4 class="text-white mb-4">Admin Menu</h4>

        <a asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
        <a asp-controller="Admin" asp-action="Index">Foods</a>
        <a asp-controller="Admin" asp-action="Index">Orders</a>
        <a asp-controller="Admin" asp-action="Index">Restaurants</a>
        <a asp-controller="Admin" asp-action="Index">Reviews</a>
        <a asp-controller="Admin" asp-action="Index">Payments</a>
        <a asp-controller="Admin" asp-action="Index">Users</a>
        <a asp-controller="Admin" asp-action="Index">Admins</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
